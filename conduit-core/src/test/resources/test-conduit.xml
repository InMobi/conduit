<conduit>
  <defaults>
    <rootdir>/tmp/conduittest2</rootdir>
    <retentioninhours>48</retentioninhours>
  </defaults>

  <!-- A stream can have only one primary and multiple mirrors as destinations
    -->
  <streams>
    <stream name="test2">
      <sources>
        <source>
          <name>testcluster2</name>
          <retentioninhours>48</retentioninhours>
        </source>
      </sources>
      <destinations>
      </destinations>
    </stream>
  </streams>

  <clusters>
    <cluster name="testcluster2" hdfsurl="file:///"
             jturl="local"
             jobqueuename="default"
             readUrl="webhdfs://"
             >
    </cluster>

  </clusters>
</conduit>
